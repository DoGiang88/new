   "id": "e5200726",
   "metadata": {},
   "outputs": [
    {
     "name": "stdout",
     "output_type": "stream",
     "text": [
      "Nhập chiều dài cạnh hình vuông: 200\n"
     ]
    }
   ],
   "source": [
    "canh = int (input (\"Nhập chiều dài cạnh hình vuông: \"))\n",
    "\n",
    "import turtle\n",
    "p = turtle.Turtle ()\n",
    "p.hideturtle()\n",
    "p.pencolor(\"green\")\n",
    "so_lan = 0\n",
    "while so_lan <= 4:\n",
    "    p.fd (canh)\n",
    "    p.rt (90)\n",
    "    so_lan += 1\n",
    "    \n",
    "turtle.done ()"
   ]
  }
